<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.linkway.core.mapper.SampleMapper">
    <select id="selectAll" resultType="site.linkway.core.entity.po.SamplePo">
        select * from goods
    </select>
    <select id="selectById" resultType="site.linkway.core.entity.po.SamplePo">
        select * from goods where id=#{id}
    </select>
    <update id="add" parameterType="site.linkway.core.entity.po.SamplePo">
        INSERT INTO goods(name,price,profile) VALUES (#{name},#{price},#{profile})
    </update>
    <update id="updateById" parameterType="site.linkway.core.entity.po.SamplePo">
        UPDATE goods SET name = #{name},price=#{price},profile=#{profile} WHERE id = #{id}
    </update>
    <delete id="deleteById" parameterType="site.linkway.core.entity.po.SamplePo">
        DELETE FROM goods WHERE id = #{id}
    </delete>
</mapper>